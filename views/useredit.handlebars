<h1>Adicione um {{user.name}}</h1>
<form action="/users/update"  method="POST" class="form">
  <div class="form-control">
    <input type="hidden" name="id" value="{{user.id}}">
    <label for="name">Nome: </label>
    <input type="text" name="name" placeholder="Digite o nome do usuario:" value="{{user.name}}" >
  </div>
  <div class="form-control">
    <label for="accupation">Profissao: </label>
    <input type="text" name="accupation" placeholder="Digite a profissao" value="{{user.accupation}}">
  </div>
    <div class="form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter">
        {{/if}}
    <label for="newsletter">Enviar promoçoes?</label>
  </div>
  <input type="submit" value="Editar">
</form>
<div class="adreess-container">
   <h2>Endereço: </h2>
   <form action="/adreess/create" method="POST">
      <input type="hidden" name="UserId" value="{{user.id}}">
         <div class="form-control">
          <label for="street">Rua:</label>
          <input type="text" name="street" placeholder="Digite a sua rua">
         </div>
         <div class="form-control">
          <label for="number">Numero:</label>
          <input type="text" name="number" placeholder="Digite o numero da sua residencia">
         </div>
         <div class="form-control">
          <label for="city">Cidade:</label>
          <input type="text" name="city" placeholder="Digite o nome da sua cidade">
         </div>
         <input type="submit" value="Incluir endereço">
   </form>
</div>
